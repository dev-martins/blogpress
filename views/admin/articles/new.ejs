<%- include('../../partials/header'); -%>
    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                <% if (locals.category) { %>
                    <h4>Editar Artigo</h4>
                    <% }else{ %>
                        <h4>Novo Artigo</h4>
                        <% } %>
            </div>
            <div class="card-body">
                <% if (locals.category) { %>
                    <form method="POST" action="/admin/categories/update">
                        <div class="mb-3">
                            <label for="category" class="form-label">Titulo do Artigo</label>
                            <input type="text" class="form-control" id="category" name="title"
                                value="<%= category.title %>" placeholder="digite o titulo do artigo">
                            <input type="hidden" class="form-control" id="category" name="id"
                                value="<%= category.id %>" />
                        </div>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </form>
                    <% }else{ %>
                        <form method="POST" action="/admin/categories/store">
                            <div class="mb-3">
                                <label for="category" class="form-label">Titulo do Artigo</label>
                                <input type="text" class="form-control mb-4" id="category" name="title"
                                    placeholder="digite o titulo do artigo">
                                <textarea class="form-control" name="body"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </form>
                        <% } %>
            </div>
        </div>

    </div>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea', // change this value according to your HTML
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table paste imagetools wordcount'
            ],
            toolbar: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',

        });

    </script>
    <%- include('../../partials/footer'); -%>